@{
    ViewBag.Title = "School Hub Add Class";
}

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <link rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/bootstrap/3.3.7/css/bootstrap.min.css" integrity="sha384-BVYiiSIFeK1dGmJRAkycuHAHRg32OmUcww7on3RYdg4Va+PmSTsz/K68vbdEjh4u" crossorigin="anonymous">
    <title>Add Teacher Class</title>
</head>
<body>
    <div class="jumbotron">
        <div class="row">
            <div class="col-md-6">
                <h2>Add Class</h2>
            </div>
            <div class="col-md-6">
                <div class="vertical-menu">
                    <a href="TeacherHomeIndex" class="btn btn-primary">Go back</a>
                </div>
            </div>
        </div>
        <div class="container">
            <form>
                <div class="row">
                    <div class="form-group col-lg-4 col-md-4 col-sm-4 col-xs-12">
                        <label for="CourseNumber">Select list:</label>
                        <select class="form-control">
                            <option value="3" selected>CS300</option>
                            <option value="4">CS321</option>
                            <option value="5">CS346</option>
                            <option value="6">CS480</option>
                        </select>
                    </div>

                    <div class="form-group col-lg-8 col-md-8 col-sm-8 col-xs-12">
                        <label for="CourseName">Course Name:</label>
                        <input class="form-control" type="text" name="CourseName" id="CourseName" value="Artificial Intelligence">
                    </div>
                </div>
                
                <div class="form-group">
                    <label for="Description">Last Name:</label>
                    <textarea class="form-control col-lg-12 col-md-12" rows="4" name="Description" id="Description" readonly>The pursuit of making computer act rationally
                </textarea>
                </div>
                <div class="row">
                    <div class="form-group col-lg-6 col-md-6 col-sm-6 col-xs-12">
                        <label for="StartDate">Start Date:</label>
                        <input class="form-control col-lg-12 col-md-12" type="date" name="StartDate" id="StartDate" placeholder="11/07/2018">
                    </div>

                    <div class="form-group col-lg-6 col-md-6 col-sm-6 col-xs-12">
                        <label for="EndDate">Start Date:</label>
                        <input class="form-control col-lg-12 col-md-12" type="date" name="EndDate" id="EndDate" placeholder="11/07/2018">
                    </div>
                </div>
                

                <div class="form-group">
                    <button class="btn btn-lg btn-primary btn-block" type="submit" id="Submit">Add Class</button>
                </div>
            </form>
        </div>
    </div>

    <link href="https://cdnjs.cloudflare.com/ajax/libs/jqueryui/1.12.0/jquery-ui.min.css" rel="stylesheet">
    <script src="https://cdnjs.cloudflare.com/ajax/libs/modernizr/2.8.3/modernizr.min.js"></script>
    <script src="https://code.jquery.com/jquery-3.1.0.min.js"></script>
    <script src="https://code.jquery.com/ui/1.12.0/jquery-ui.min.js"></script>

    <script>
$(function() {
   if (!Modernizr.inputtypes['date']) {
      $('input[type=date]').datepicker({
         dateFormat: 'mm-dd-yy'
      });
   }
});
    </script>

</body>
</html>