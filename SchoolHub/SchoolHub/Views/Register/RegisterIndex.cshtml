@{
    ViewBag.Title = "School Hub Registration";
}

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1, shrink-to-fit=no">
    <link rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/bootstrap/4.0.0-alpha.6/css/bootstrap.min.css" integrity="sha384-rwoIResjU2yc3z8GV/NPeZWAv56rSmLldC3R/AZzGRnGxQQKnKkoFVhFQhNUwEyJ" crossorigin="anonymous">
    <title>School Hub Registration</title>
</head>
<body>
    <div class="jumbotron">
        <h1>Register for School Hub</h1>
    </div>
    <div class="container">
        <form>
            <div class="form-group">
                <label for="firstName">First Name:</label>
                <input class="form-control col-lg-12 col-md-12" type="text" name="FirstName" id="FirstName" placeholder="Enter your first name">
            </div>

            <div class="form-group">
                <label for="lastName">Last Name:</label>
                <input class="form-control col-lg-12 col-md-12" type="text" name="LastName" id="LastName" placeholder="Enter your last name">
            </div>

            <div class="form-group">
                <label for="newEmail">Email Address:</label>
                <input class="form-control col-lg-12 col-md-12" type="email" name="Email" id="Email" placeholder="Enter your email address" required>
            </div>

            <div class="form-group">
                <label for="Password">Password:</label>
                <input class="form-control col-lg-12 col-md-12" type="password" name="Password" id="Password" placeholder="Enter your password">
            </div>

            <div class="form-group">
                <button class="btn btn-lg btn-primary btn-block" type="submit" id="Submit">Sign In</button>
            </div>
        </form>

    <div class="container login-link">
        <p>Already have an account? <a asp-page="/Login">Login Now</a>.</p>
    </div>
    </div>
</body>
</html>