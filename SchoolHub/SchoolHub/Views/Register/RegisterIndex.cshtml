@{
    ViewBag.Title = "School Hub Registration";
}

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <link rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/bootstrap/4.0.0-alpha.6/css/bootstrap.min.css" integrity="sha384-rwoIResjU2yc3z8GV/NPeZWAv56rSmLldC3R/AZzGRnGxQQKnKkoFVhFQhNUwEyJ" crossorigin="anonymous">
    <title>School Hub Registration</title>
</head>
<body>
    <div class="jumbotron">
        <h1>Register for School Hub</h1>

        <div class="container">
            <form>
                <div class="row">
                    <div class="form-group col-lg-8 col-md-8 col-sm-8 col-xs-12">
                        <label for="firstName">Create Your Username:</label>
                        <input class="form-control col-lg-12 col-md-12" type="text" name="Username" id="Username" placeholder="Enter your desired username">
                    </div>

                    <div class="form-group col-lg-4 col-md-4 col-sm-4 col-xs-12">
                        <label for="Role">Role:</label>
                        <select id="Role" class="form-control">
                            <option value="2" selected>Student</option>
                            <option value="1">Teacher</option>
                        </select>
                    </div>
                </div>

                <div class="row">
                    <div class="form-group col-lg-6 col-md-6 col-sm-6 col-xs-12">
                        <label for="firstName">First Name:</label>
                        <input class="form-control col-lg-12 col-md-12" type="text" name="FirstName" id="FirstName" placeholder="Enter your first name">
                    </div>

                    <div class="form-group col-lg-6 col-md-6 col-sm-6 col-xs-12">
                        <label for="lastName">Last Name:</label>
                        <input class="form-control col-lg-12 col-md-12" type="text" name="LastName" id="LastName" placeholder="Enter your last name">
                    </div>
                </div>

                <div class="form-group">
                    <label for="newEmail">Email Address:</label>
                    <input class="form-control col-lg-12 col-md-12" type="email" name="Email" id="Email" placeholder="Enter your email address" required>
                </div>

                <div class="form-group">
                    <label for="Password">Password:</label>
                    <input class="form-control col-lg-12 col-md-12" type="password" name="Password" id="Password" placeholder="Enter your password">
                </div>

                <div class="form-group">
                    <button class="btn btn-secondary btn-block" type="submit" id="Submit">Register</button>
                </div>
            </form>

            <div class="container login-link">
                <p>Already have an account? <a href="../Login/LoginIndex">Login Now</a>.</p>
            </div>
        </div>
    </div>

    <script>
        $(document).ready(function () {
    $("#Submit").click(function (e) {
        if ($("#Username").val() == "")
            alert("Username cannot be empty");
        else if ($("#FirstName").val() == "")
            alert("First name cannot be empty");
        else if ($("#LastName").val() == "")
            alert("Last name cannot be empty");
        else if ($("#Email").val() == "")
            alert("Email cannot be empty");
        else if ($("#Password").val() == "")
            alert("Password cannot be empty");
        else {
            $.ajax({
                type: "POST",
                url: "/Register/CheckUserLogin",
                contentType: "application/json; charset=utf-8",
                data: '{"username":"' + $("#username").val() + '","password":"' + $("#password").val() + '"}',
                dataType: "html",
                success: function (result, status, xhr) {
                    out = JSON.parse(result)
                    if (out.message != "") {
                        alert(out.message)
                    } else {
                        if (out.user.RoleId == 1) {
                            var teacherId = out.user.Id;
                            var url = '@Url.Action("TeacherHomeIndex", "TeacherHome")?userId='+teacherId;

                        } else {
                            var url = '@Url.Action("StudentHomeIndex", "StudentHome")';
                        }
                        window.location.href = url;
                    }
                },
                error: function (xhr, status, error) {
                    alert("Issue occured while logging in")
                }
            });
        }
        return false;
    });
});

    </script>
</body>
</html>