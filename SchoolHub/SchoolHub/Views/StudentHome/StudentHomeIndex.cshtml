<div class="jumbotron">
    <table id="example" class="table table-striped table-bordered" style="width:100%">
        <thead>
            <tr>
                <th>Description</th>
                <th>Start Date</th>
                <th>End Date</th>
                <th>Class</th>
                <th>Type</th>
                <th>Completed</th>
            </tr>
        </thead>
        <tbody>
            @for (int i = 0; i < Model.Events.Count; i++)
            {
                <tr>
                    <td>@Html.DisplayFor(Model => Model.Events[i].Description)</td>
                    <td>@Html.DisplayFor(Model => Model.Events[i].StartDate)</td>
                    <td>@Html.DisplayFor(Model => Model.Events[i].EndDate)</td>
                    <td>@Html.DisplayFor(Model => Model.Events[i].ClassName)</td>
                    <td>@Html.DisplayFor(Model => Model.Events[i].Type)</td>
                    <td>
                        <input type="checkbox" id="event0" />
                    </td>
                </tr>
            }
        </tbody>
    </table>

