@model SchoolHub.Models.StudentHomeModel

@{
    ViewBag.Title = "Student Home Page";
}
<link rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/bootstrap/4.0.0/css/bootstrap.min.css" integrity="sha384-Gn5384xqQ1aoWXA+058RXPxPg6fy4IWvTNh0E263XmFcJlSAwiGgFAW/dAiS6JXm" crossorigin="anonymous">
<nav class="navbar navbar-expand-md navbar-expand-sm navbar-dark bg-dark">
    <a class="navbar-brand mr-auto" href="#">Home</a>
    <button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#navbarCollapse" aria-controls="navbarCollapse" aria-expanded="false" aria-label="Toggle navigation">
        <span class="navbar-toggler-icon"></span>
    </button>
    <div class="collapse navbar-collapse" id="navbarCollapse">
        <ul class="navbar-nav mr-auto">
            <li class="nav-item">
                <a class="nav-link" href="#">Calander</a> <!-- <span class="sr-only">(current)</span></a> -->
            </li>
            <li class="nav-item">
                <a class="nav-link" href="classes.html">Classes</a>
            </li>
        </ul>
        <ul class="navbar-nav">
            <li class="nav-item ">
                <a class="nav-link" href="../Login/LoginIndex">Sign Out</a>
            </li>
        </ul>
    </div>
</nav>

<div class="container">
    <div class="row align-items-center">
        <div class="col-sm">
            <select>
                @for (int i = 0; i < Model.Classes.Count; i++)
                {
                    <option value=@Model.Classes[i].Id>@Html.DisplayFor(Model => Model.Classes[i].Name)</option>
                }

            </select>
        </div>
        <div class="col-sm">
            <input type="radio" name="type" value="0">Assignment<br>
            <input type="radio" name="type" value="2">Project<br>
            <input type="radio" name="type" value="1">Exam
        </div>
        <div class="col-sm">
            <button type="button" class="btn btn-secondary">All Classes</button>
        </div>
        <div class="col-sm">
            <button type="button" class="btn btn-secondary">Show Completed Tasks</button>
        </div>
    </div>
</div>

<table id="example" class="table table-striped table-bordered" style="width:100%">
    <thead>
        <tr>
            <th>Description</th>
            <th>Start Date</th>
            <th>End Date</th>
            <th>Class</th>
            <th>Type</th>
            <th>Completed</th>
        </tr>
    </thead>
    <tbody>
        @for (int i = 0; i < Model.Events.Count; i++)
        {
            string startDateDisplay = $"{Model.Events[i].StartDate.Month}/{Model.Events[i].StartDate.Day}/{Model.Events[i].StartDate.Year}";
            
            <tr>
                <td>@Html.DisplayFor(Model => Model.Events[i].Description)</td>
                <td>@startDateDisplay</td>
                <td>@Html.DisplayFor(Model => Model.Events[i].EndDate)</td>
                <td>@Html.DisplayFor(Model => Model.Events[i].ClassId)</td>
                <td>@Html.DisplayFor(Model => Model.Events[i].Type)</td>
                <td>
                    <input type="checkbox" name="event0" />
                </td>
            </tr>
        }
    </tbody>
</table>

