@{
    ViewBag.Title = "School Hub Login";
}

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1, shrink-to-fit=no">
    <title>School Hub Login</title>
</head>
<body>

    <div class="jumbotron">
        <h1>Welcome back to your School Hub</h1>

    </div>
    <div class="container">
        <form>
            <div class="form-group">
                <label for="username">Username:</label>
                <input class="form-control" type="text" name="username" placeholder="Enter your username">

            </div>

            <div class="form-group " >
                <label for="inputPassword">Password:</label>
                <input class="form-control" data-toggle="password" id="password" type="password"
                       name="password" placeholder="Enter your password">
            </div>

            <label>
                <input type="checkbox" value="rememberMe"> Remember Me
            </label>

            <button class="btn btn-lg btn-primary btn-block" type="submit" >Login</button>
        </form>

        <div class="container register-link">
            <p>Need to create an account? <a href="register.html">Register Now</a>.</p>
        </div>
    </div>

</body>
</html>