@{
    ViewBag.Title = "School Hub Add Class";
}

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1, shrink-to-fit=no">
    <link rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/bootstrap/4.0.0-alpha.6/css/bootstrap.min.css" integrity="sha384-rwoIResjU2yc3z8GV/NPeZWAv56rSmLldC3R/AZzGRnGxQQKnKkoFVhFQhNUwEyJ" crossorigin="anonymous">
    <title>Add Teacher Class</title>
</head>
<body>
    <div class="jumbotron">
        <div class="row">
            <div class="col-md-6">
                <h1>Change your Password</h1>
            </div>
            <div class="col-md-6">
                <div class="vertical-menu">
                    <a href="~/TeacherHome/Index" class="btn btn-primary">Go back</a>
                </div>
            </div>
        </div>
        <div class="container">
            <form>
                <div class="form-group">
                    <label for="CourseNumber">Select list:</label>
                    <select class="form-control">
                        <option value="3" selected>CS300</option>
                        <option value="4">CS321</option>
                        <option value="5">CS346</option>
                        <option value="6">CS480</option>
                    </select>
                </div>


                <div class="form-group">
                    <label for="CourseName">Course Name:</label>
                    <input class="form-control col-lg-12 col-md-12" type="text" name="CourseName" id="CourseName" value="Artificial Intelligence" readonly>
                </div>

                <div class="form-group">
                    <label for="Description">Last Name:</label>
                    <textarea class="form-control col-lg-12 col-md-12" rows="4" name="Description" id="Description" readonly>The pursuit of making computer act rationally
                </textarea>
                </div>

                <div class="form-group">
                    <label for="StartDate">Start Date:</label>
                    <input class="form-control col-lg-12 col-md-12" type="date" name="StartDate" id="StartDate" placeholder="11/07/2018" readonly>
                </div>

                <div class="form-group">
                    <label for="EndDate">Start Date:</label>
                    <input class="form-control col-lg-12 col-md-12" type="date" name="EndDate" id="EndDate" placeholder="11/07/2018" readonly>
                </div>

                <div class="form-group">
                    <button class="btn btn-lg btn-primary btn-block" type="submit" id="Submit">Add Class</button>
                </div>
            </form>
        </div>
      </div>
</body>
</html>